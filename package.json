{
  "name": "sgnl",
  "version": "1.0.0",
  "private": true,
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "generate:og": "ts-node scripts/generate-og.ts",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "//": "— Web static export (Expo SDK 54 outputs to dist/) —",
    "build:web": "expo export -p web && mkdir -p dist && cp -R public/* dist || true",
    "preview:web": "npx serve -s dist -l 5050",
    "//:vercel": "— Vercel uses this for builds —",
    "vercel-build": "expo export -p web && mkdir -p dist && cp -R public/* dist || true"
  },
  "dependencies": {
    "@react-native-masked-view/masked-view": "0.3.2",
    "@supabase/supabase-js": "^2.58.0",
    "@vercel/og": "^0.6.2",
    "canvas": "^3.2.0",
    "expo": "~54.0.10",
    "expo-clipboard": "~8.0.7",
    "expo-linear-gradient": "~15.0.7",
    "expo-linking": "~8.0.8",
    "expo-sharing": "~14.0.7",
    "expo-status-bar": "~3.0.8",
    "ogl": "^1.0.11",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-reanimated": "~4.1.1",
    "react-native-svg": "15.12.1",
    "react-native-view-shot": "4.0.3",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/react": "~19.1.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2"
  },
  "engines": {
    "node": ">=18"
  }
}
